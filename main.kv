
<Application>:

    FloatLayout:
        Button:
            text: 'Back'
            background_color: 1.0, 0.7, 0.7
            size_hint: 0.2, 0.05
            pos_hint: {'x': 0.0, 'y': 0.0}
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'Theory'

<Theory>:
    FloatLayout:
        Button:
            text: 'Application'
            background_color: 0.0, 1.0, 1.0
            size_hint: 0.2, 0.05
            pos_hint: {'x': 0.8, 'y': 0.0}
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'Application'
